<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= username %>
    </title>
    <link href="/css/style.css" rel="stylesheet">
    <script src="/js/main.js" defer></script>
</head>

<body class="bg-gray-900 p-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-slate-200">Welcome, <%= username %>
        </h1>

        <div class="bg-slate-50 p-6 rounded-lg shadow-md mb-8">
            <h2 class="text-xl font-semibold mb-4 text-slate-800">Add a Movie</h2>
            <div class="mb-4">
                <input type="text" id="movieSearch" placeholder="Search for a movie..."
                    class="w-full p-2 border rounded-md bg-slate-100 border-slate-300 text-slate-800">
                <div id="suggestions"
                    class="mt-2 border rounded-md bg-slate-50 max-h-60 overflow-y-auto border-slate-300"></div>
            </div>

            <form id="addMovieForm" action="/add-movie" method="POST" class="mt-4">
                <input type="hidden" name="username" value="<%= username %>">
                <input type="hidden" name="title" id="movieTitle">
                <input type="hidden" name="poster_url" id="moviePoster">
                <input type="hidden" name="imdb_id" id="movieImdbId">
                <textarea name="review" placeholder="Write a review..."
                    class="w-full p-2 border rounded-md h-32 bg-slate-100 border-slate-300 text-slate-800"></textarea>
                <button type="submit" class="mt-4 bg-blue-400 text-slate-800 px-4 py-2 rounded hover:bg-blue-300">
                    Add Movie
                </button>
            </form>
        </div>

        <h2 class="text-2xl font-semibold mb-4 text-slate-200">Your Movies</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% movies.forEach(movie=> { %>
                <div class="bg-slate-50 rounded-lg shadow-lg overflow-hidden">
                    <img src="<%= movie.poster_url %>" class="w-full h-64 object-cover" alt="<%= movie.title %>">
                    <div class="p-4">
                        <h3 class="font-bold text-lg mb-2 text-slate-700">
                            <%= movie.title %>
                        </h3>
                        <p class="text-slate-600">
                            <%= movie.review %>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
</body>

</html>