<!DOCTYPE html>
<html>

<head>
    <title>FamilyMovieTrack</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/main.js" defer></script>
</head>

<body class="bg-gray-900 p-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-gray-100">Family Movie Tracker</h1>

        <!-- Navigation -->
        <nav class="mb-8 flex justify-between items-center border-b pb-2 border-slate-600">

            <form action="/search" method="GET">
                <input type="text" name="username" placeholder="Search user" required
                    class="border p-2 rounded bg-slate-700 text-slate-300 border-slate-600">
                <button type="submit"
                    class="bg-blue-400 text-slate-800 px-4 py-2 rounded hover:bg-blue-300">Search</button>
            </form>

            <ul class="flex space-x-6">
                <li><a href="/" class="hover:text-blue-300">Home</a></li>
                <li><a href="/add-member" class="hover:text-blue-300">Add new member</a></li>
            </ul>
            <a href="/profile/Dhruv" class="bg-blue-400 text-slate-800 px-4 py-2 rounded hover:bg-blue-300">
                My Profile
            </a>
        </nav>
        <div class="max-w-6xl mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-center">Recent Movies</h1>

            <!-- Movies Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% movies.forEach(movie=> { %>
                    <div class="bg-slate-50 rounded-lg shadow-lg overflow-hidden p-4">
                        <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="w-full h-64 object-cover">
                        <div class="mt-3 text-center">
                            <p class="font-bold text-lg text-slate-700">
                                <%= movie.title %>
                            </p>
                            <p class="text-sm text-slate-500">Added by: <%= movie.username %>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
</body>

</html>